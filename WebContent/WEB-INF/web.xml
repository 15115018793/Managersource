<?xml version="1.0" encoding="UTF-8"?>

<web-app>
	<!-- login -->
	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>com.blue.servlet.Servlet1</servlet-class>
	
	</servlet>

	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<!-- info -->
	<servlet>
		<servlet-name>info</servlet-name>
		<servlet-class>com.blue.servlet.Servlet2</servlet-class>
	
	</servlet>

	<servlet-mapping>
		<servlet-name>info</servlet-name>
		<url-pattern>/info</url-pattern>
	</servlet-mapping>
	
	<!-- 查询 admin-->
	<servlet>
		<servlet-name>selcetinfo</servlet-name>
		<servlet-class>com.blue.servlet.Servlet3</servlet-class>
	
	</servlet>

	<servlet-mapping>
		<servlet-name>selcetinfo</servlet-name>
		<url-pattern>/selcetinfo</url-pattern>
	</servlet-mapping>
	
	<!-- 修改表中数据 -->
	<servlet>
		<servlet-name>updateinfo1</servlet-name>
		<servlet-class>com.blue.servlet.Servlet4</servlet-class>
	
	</servlet>

	<servlet-mapping>
		<servlet-name>updateinfo1</servlet-name>
		<url-pattern>/updateinfo1</url-pattern>
	</servlet-mapping>
	
	 <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>

</web-app>